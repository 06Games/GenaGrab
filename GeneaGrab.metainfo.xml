<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <metadata_license>MIT</metadata_license>

    <!-- Note the use of macros to automate most (but not all) content below -->
    <id>${APP_ID}</id>
    <name>${APP_FRIENDLY_NAME}</name>
    <summary>${APP_SHORT_SUMMARY}</summary>
    <developer_name>${PUBLISHER_NAME}</developer_name>
    <url type="homepage">${PUBLISHER_LINK_URL}</url>
    <project_license>${APP_LICENSE_ID}</project_license>
    <content_rating type="oars-1.1" />

    <launchable type="desktop-id">${APP_ID}.desktop</launchable>

    <description>
        <!-- See AppDescription in configuration -->
        ${APPSTREAM_DESCRIPTION_XML}
        <!--
        <p>This is a longer application description in the default (English) language
        which may span several short paragraphs. You may either specify it yourself
        directly here, or have it populated automatically using the macro above.</p>
        <p>IMPORTANT. If you wish to provide your own (default) description here, delete the
        macro directly above. In either case, you may wish to provide other language
        descriptions here also.</p>
        -->
    </description>

    <!-- Freedesktop Categories -->
    <categories>
        <category>${PRIME_CATEGORY}</category>
    </categories>

    <keywords>
        <keyword>Genealogy</keyword>
    </keywords>

    <screenshots>
        <screenshot type="default">
            <image>https://github.com/06Games/GeneaGrab/assets/24252743/b9063e6c-5326-4db1-9866-0f8091b0f6d4</image>
            <caption>Provider list</caption>
        </screenshot>
        <screenshot type="default">
            <image>https://github.com/06Games/GeneaGrab/assets/24252743/3697481f-40ef-4c87-a40b-d5fc9b005706</image>
            <caption>Registry list</caption>
        </screenshot>
        <screenshot type="default">
            <image>https://github.com/06Games/GeneaGrab/assets/24252743/806cc732-2a68-4994-b085-c97b02421507</image>
            <caption>Registry viewer</caption>
        </screenshot>
    </screenshots>

    <releases>
        <!-- See AppChangeFile in configuration -->
        ${APPSTREAM_CHANGELOG_XML}
        <!-- Or, uncomment below and delete macro directly above to specify changes yourself
        <release version="1.0.0" date="2023-05-04">
            <description>
                <ul>
                    <li>Added feature 1</li>
                    <li>Added feature 2</li>
                </ul>
            </description>
        </release>
        -->
    </releases>

</component>
